	public static void main(String[] args) throws Exception{
		String html = getHtmlByUrl("http://urochester.bncollege.com/webapp/wcs/stores/servlet/CategoryDisplay?categoryId=40000&catalogId=10001&langId=-1&storeId=27055&top=Y/");
	 	if(html!=null&&!"".equals(html)){
	 		Document doc = Jsoup.parse(html);
	 		Elements items = doc.select("div.popularPicksContainer>ul.popularPicksListItem>li.quickViewButtonHolder>a");
 			int x = 0;
	 		for (Element item: items){
	 			Elements imgs = item.getElementsByTag("img");	 	 			
	 			
	 			String i_url = item.attr("href");// get i_url for item url
	 			
	 			//get src for imgs and title for item name, save imgs to local
	 			for (Element img : imgs){
		 			String src = img.attr("src");
		 			String title = img.attr("title");
		 			//save file
		 			String path = "C:\\Users\\Administrator\\Desktop\\workplace\\test\\";
		 			String filename = "test"+ Integer.toString(x)+".jpg";
		 			download(src,path,filename );
		 			//get i_pc for price
		 			Elements prices = doc.select("div.popularPicksContainer>ul.popularPicksListItem>li.quickViewButtonHolder>p.apparePopularPicksPirce>span");
		 			for (Element price : prices){
		 				String i_pc = price.attr("normalPrice");
		 			}
		 			x ++;
	 			}
	 			//print outputs
	 			System.out.println(title+","+i_pc+","+i_url+","+src);
	 		}	    
	 	}
	 	}
