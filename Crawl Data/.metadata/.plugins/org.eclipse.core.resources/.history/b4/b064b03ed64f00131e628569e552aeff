public class get_link {
	public static void main(String[] args) throws Exception{
		String html = get_html.getHtmlByUrl("http://urochester.bncollege.com/webapp/wcs/stores/servlet/SubcategoryView?parentCatId=40360&level=2&categoryId=40425&catalogId=10001&langId=-1&storeId=27055&topCatId=40000");
	 	if(html!=null&&!"".equals(html)){
	 		Document doc = Jsoup.parse(html);
	 		Elements items = doc.select("div.popularPicksContainer>ul.popularPicksListItem>li.quickViewButtonHolder>a");
 			int x = 1;
	 		for (Element item: items){
	 			Elements imgs = item.getElementsByTag("img");	 	 			
	 			
	 			String i_url = item.attr("href");// get i_url for item url
	 			Elements prices = doc.select("div.popularPicksContainer>ul.popularPicksListItem>li.quickViewButtonHolder>p");
	 			for (Element price:prices){
	 				Elements pcs = price.getElementsByTag("span");
	 				for (Element pc:pcs){
	 					String cur_pc = pc.attr("listPriceStrong");
	 					System.out.println(cur_pc);
	 				}
	 			}
	 			//get src for imgs and title for item name, save imgs to local
	 			for (Element img : imgs){
		 			String src = img.attr("src");
		 			String title = img.attr("title");
		 			//save file
		 			String path = "C:\\Users\\Administrator\\Desktop\\workplace\\test\\";
		 			String filename = "test"+ Integer.toString(x)+".jpg";
		 			save_img.download(src,path,filename );
		 			
		 			System.out.println(title+","+","+i_url+","+src);
		 			x ++;
	 			}
	 		}	    
	 	}
	 	}
	}


